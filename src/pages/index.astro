<style>
    .loading{
        animation: bounce 1s infinite;
    }
</style>

<script is:inline>
    const language = localStorage.getItem('language')
    if(language){
        window.location = "/" + language.toLowerCase()
    }else{
        if(navigator.language.includes('fr')){
            window.location = "/fr"
        }else{
            window.location = "/en"
        }
    }
</script>